<%= form_with(model:@user, local:true) do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %><br />
    <% end %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :sex %>
  <%= f.radio_button :sex, :male, {} %><%= f.label :male, t('user.male') %>
  <%= f.radio_button :sex, :female, {} %><%= f.label :female, t('user.female') %>
  <br />
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br />
  <%= f.label :birth %>
  <%= f.select :birth, User.births.to_a.map { |k, v| [t("enums.user.birth.#{k}"), k]} %>
  <br />
  <%= f.label :status %>
  <%= f.select :status, User.statuses.to_a.map { |k, v| [t("enums.user.status.#{k}"), k]} %>
  <br />
  <%= f.submit %>
<% end %>
